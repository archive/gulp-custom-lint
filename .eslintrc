{
  "rules": {
    "indent": [2, 2],
    "quotes": [2, "single"],
    "linebreak-style": [2, "unix"],
    "semi": [2, "always"],
    "eqeqeq": 2,
    "no-spaced-func": 2,
    "complexity": [2, 8],
    "curly": 2,
    "space-before-function-paren": [2, "never"],
    "no-lone-blocks": 2,
    "max-nested-callbacks": [2, 1],
    "no-nested-ternary": 2,
    "max-depth": [2, 2],
    "max-len": [2, 80, 2],
    "max-params": [2, 5]
  },
  "env": {
    "es6": true,
    "node": true
  },
  "extends": "eslint:recommended",
  "globals": {
    "describe": true,
    "it": true,
    "beforeEach": true
  }
}